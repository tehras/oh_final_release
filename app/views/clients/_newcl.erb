
<div class='management-window'>


  <%= simple_form_for @client, :class => 'form-expandable', :html=> {:class=> 'form-horizontal'}, :url => {:controller => "clients", :action => "create"} do |f| %>
      <%= f.error_notification %>
      <h3 class="expanderHead"><span class="expanderSign" style="cursor:pointer;"><i class="icon-plus-sign"></i></span> Add Client</h3>
      <div class='expanderContent'>
        <div class="form-inputs">

          <div class='form-window row'>

            <%= render :partial => 'clients/form', :locals => {f: f}%>
          </div>
        </div>


          <div class="form-actions">
            <%= f.button :submit, 'Create' ,:class => 'btn-primary' %>

        </div>
      </div>
  <% end %>
</div>